---
import Layout from '@/layouts/Layout.astro';
import Hero from '@/components/sections/Hero.astro';
import About from '@/components/sections/About.astro';
import Projects from '@/components/sections/Projects.astro';
import Experience from '@/components/sections/Experience.astro';
import Technologies from '@/components/sections/Technologies.astro';
import Contact from '@/components/sections/Contact.astro';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
---

<Layout title="Portfolio Yanina Unrein - Desarrolladora y Programadora Web"
description="Descubre mi portfolio como desarrolladora Frontend junior. Explora mis proyectos y habilidades en diseño web, programación y desarrollo de interfaces interactivas.">
	<main>
		<Hero />
		<Experience />
		<Projects />
		<Technologies />
		<About />
		<Contact />
	</main>
</Layout>

<script>
	import { updateLanguage } from '@/i18n/utils';
	
	document.addEventListener('astro:page-load', () => {
		updateLanguage(document.documentElement.lang);
	});
</script>
