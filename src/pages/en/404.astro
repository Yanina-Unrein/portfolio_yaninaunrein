---
import Layout from "@/layouts/Layout.astro"
import { useTranslations } from '@/i18n/utils';

const lang = 'en'; // English 404 page
const t = useTranslations(lang);

Astro.response.status = 404;
---

<Layout title={t('errorPage.title')} description="" hideNavbarFooter={true}>
    <section>
        <div>
            <h1 data-i18n="errorPage.title">{t('errorPage.title')}</h1>
            <h2 data-i18n="errorPage.subTitle">{t('errorPage.subTitle')}</h2>
            <figure>
                <img src={t('errorPage.img_you')} data-i18n="errorPage.subTitle" alt={t('img_alt')}>
            </figure>
            <span data-i18n="errorPage.you_message">{t('errorPage.you_message')}</span>
        </div>
        <div class="back-container">
            <p data-i18n="errorPage.paragraph1">{t('errorPage.paragraph1')}</p>
            <p data-i18n="errorPage.paragraph2">{t('errorPage.paragraph2')}</p>
            <a href="/" data-i18n="errorPage.btn_back">{t('errorPage.btn_back')}</a>
        </div>
    </section>
</Layout>

<script>
    import { getCurrentLang, changeLanguage } from '@/i18n/utils';
    
    // Ensure this script runs only on the client-side
    if (typeof window !== 'undefined') {
        const currentLang = getCurrentLang();
        changeLanguage(currentLang);
    }
</script>

<style>
    section{
        position: relative;
        background-image: url(../../public/img/404/planet-earth.webp);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        height: 100vh;
        padding: 150px 10px;
        width: 100%;
    }


    h1{
        font-size: 2rem;
        text-align: center;
        color: #000000;
        font-weight: 800;
        padding-top: 50px;
    }

    h2{
        font-size: 1rem;
        color: #ffffff;
        text-align: center;
        color: #000000;
        
    }

    figure{
        position: absolute;
        top: 12px;
        left: 5px;
        width: 125px;
        height: 75px;
        padding-left: 25px;
        animation: float 3s ease-in-out infinite;
    }

    figure img{
        width: 100%;
        height: 100%;
        display: block; /* Asegura que la imagen no tenga espacio extra debajo */
    }

    span{
        position: absolute;
        top: 85px;
        color: #ffffff;
        padding-left: 10px;
        font-size: 0.90rem;
    }

    .back-container{
        position: absolute;
        top: 450px;
        width: 95%;
        color: #ffffff;
        padding: 30px 10px;
        text-align: center;
        background-color: rgba(0,0,0,0.6);
        border-radius: 10px;
    }

    .back-container p:nth-child(2) {
        padding-bottom: 20px;
    }

    a{
        cursor: pointer;
        background-color: rgba(246, 246, 246, 0.214);
        padding: 10px;
        border-radius: 5px;
        box-shadow: rgba(162, 162, 163, 0.432) 0px 7px 29px 0px;
        color: #ffffff;
        font-weight: 800;
    }

    a:hover {
        background-color: rgba(39, 38, 38, 0.314);
        box-shadow: rgba(225, 225, 225, 0.508) 0px 7px 29px 0px;
    }

    @media(min-width:768px){
        .back-container{
            width: 700px;
            margin: 0 auto;
            left: 50%; 
            transform: translateX(-50%);
            top: 600px;
        }
    }

    @keyframes float {
    0%, 100% {
        transform: translateY(0); /* Posici√≥n original */
    }
    50% {
        transform: translateY(-5px); /* Eleva la imagen 10px */
    }
}
</style>