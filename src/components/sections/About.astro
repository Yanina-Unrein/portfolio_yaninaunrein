---
import Section from "@/components/Section.astro"
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import Download from "@/components/buttons/Download.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Section>
     <section id="about" class="about-section">
          <h2 data-i18n="aboutMe.title">{t('aboutMe.title')}</h2>
          <div class="about-container">    
               <div class="img-container">             
                    <figure class="personal-img">
                         <img src="/img/aboutMe.webp" alt="Yanina Unrein">
                    </figure>
               </div>
               <div class="text-container">
                    <h3 data-i18n="aboutMe.subTitle">{t('aboutMe.subTitle')}</h3>
                    <p data-i18n="aboutMe.description_1">{t('aboutMe.description_1')}</p>
                    <p data-i18n="aboutMe.description_2">{t('aboutMe.description_2')} <span class="tecnica" data-i18n="aboutMe.description_3">{t('aboutMe.description_3')}</span> <span data-i18n="aboutMe.description_4">{t('aboutMe.description_4')}</span> <span class="tecnica" data-i18n="aboutMe.description_5">{t('aboutMe.description_5')}</span><span data-i18n="aboutMe.description_6">{t('aboutMe.description_6')}</span> 
                    </p>
               </div>     
          </div> 
          <div class="cv-container">
               <p data-i18n="aboutMe.cv_text">{t('aboutMe.cv_text')}</p>               
               <Download />
          </div>
     </section>
</Section>


<style>
     .about-section{   
          display: flex;
          flex-direction: column;
          justify-content: center;
          padding: 50px 30px;  
          background-color: #13151a;
     }

     .about-container{
          display: flex;
          flex-direction: column;
          color: #fff;
          gap: 25px;
     }

     .img-container{
          display: flex;
          align-items: center;
          justify-content: center;
          padding-bottom: 25px;
     }

     .personal-img{
          display: flex;
          justify-content: center;
          align-items: center;
          flex-direction: column;
          margin: auto;
          width: 200px;
          height: 200px;  
          position: relative;
          z-index: 1;  
     }

     .personal-img::before {
          content: '';
          position: absolute;
          top: 101px;
          left: 99px;
          width: 110%;
          height: 110%;
          border-radius: 50%;
          border: 3px solid transparent;
          border-top: 3px solid #FF3CAC; /* Color del borde superior para el gradiente */
          border-right: 3px solid #784BA0; /* Color del borde derecho para el gradiente */
          border-bottom: 3px solid #2B86C5; /* Color del borde inferior para el gradiente */
          box-sizing: border-box;
          transform: translate(-50%, -50%);
          animation: spin 2s linear infinite;
          z-index: 0;  
     }
 
     .personal-img img{
          width: 100%;
          height: auto;
          border-radius: 100%;
          position: relative;
          z-index: 1;  
     }

     h2{
        font-size: 2.5rem;
        padding: 20px 0 10px 0;
        display: inline-block;
        position: relative;
        color: #fff;
        margin: 30px 0;     
     }

     h2::before {
        content: '';
        position: absolute;
        bottom: 0.80px; 
        left: 0;
        width: 20%; 
        border-bottom: 4px solid #fb4ea1; 
        white-space: nowrap; 
     }

     h3{
          font-size: 1.3rem;
          text-align: center;
          color: #784BA0;
     }

     p{
          font-size: 1rem;
          line-height: 1.6;        
          text-align: center;
     }
    
     .tecnica{
          color: #f97eba;
          font-weight: 400;
     }

     .cv-container{
          display: flex;
          flex-direction: column;
          align-items: center;
          gap: 15px;
          padding: 20px 0 0 0;
     }

     .cv-container p{
          color: #ffffff;
          text-align: center;
     }

     /* Ocultar elementos del contenedor about cuando el navbar est√° abierto */
     body.open .about-container {
     visibility: hidden;
     }

     body.open .about-section {
          display: none;
     }    


     @media(min-width:768px){
          .about-section{
               justify-content: center;
               padding: 50px 80px;
          }

          h2::before {
               width: 5%;           
          }

          .about-container{
               flex-direction: row;
          }

          .text-container{
               width: 50%;
          }

     }

     @media(min-width:1024px){
          .about-section{        
               padding: 50px 90px;
          }    

          .about-container{
               justify-content: space-around;
          }

          .personal-img{
               width: 250px;
               height: 250px;
          }
          .personal-img::before{
               top: 127px;
               left: 125px;
          }

          .text-container{
               display: flex;
               flex-direction: column;
               justify-content: center;
          }

          .text-container h3 , p {
               text-align: left;
          }
          
          .cv-container a{
               padding: 20px;
               width: 180px;
          }

     }

     @keyframes spin {
          0% {
          transform: translate(-50%, -50%) rotate(0deg);
          }
          100% {
          transform: translate(-50%, -50%) rotate(360deg);
          }
     }

</style>