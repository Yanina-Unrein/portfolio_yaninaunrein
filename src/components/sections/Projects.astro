---
import CardProject from "@/components/cards/CardProject.astro";
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import Section from "../Section.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const allProjects = t('projects.items') || [];
---

<Section>
  <section id="proyectos" class="projects-section">
    <div class="projects-container">
      <div class="title-container">
        <h2>{t('projects.title')}</h2>
      </div>   
          <div class="filters">
              <button class="filter-btn active" data-filter="all">{t('projects.filter_all')}</button>
              <button class="filter-btn" data-filter="fullstack">{t('projects.filter_fullstack')}</button>
              <button class="filter-btn" data-filter="frontend">{t('projects.filter_frontend')}</button>
              <button class="filter-btn" data-filter="backend">{t('projects.filter_backend')}</button>
              <button class="filter-btn" data-filter="colaborativo">{t('projects.filter_collaborative')}</button>
          </div>
          <div id="projects-list" class="cards-container">
                {allProjects.map((project: any) => (
                  <CardProject 
                    classList={['card-project']}
                    data-tags={project.tags?.join(',') || ''}
                    data-collaborate={project.collaborate}
                    {...project}
                  />
              ))}
          </div>
      </div>
  </section>
</Section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const buttons = document.querySelectorAll(".filter-btn") as NodeListOf<HTMLButtonElement>;
    const cards = document.querySelectorAll(".card-project") as NodeListOf<HTMLElement>;

   buttons.forEach(btn => {
      btn.addEventListener("click", () => {
        buttons.forEach(b => b.classList.remove("active"));
        btn.classList.add("active");

        const filter = btn.dataset.filter || "all";

        cards.forEach(card => {
          const tags = card.dataset.tags || "";
          const isCollaborative = card.dataset.collaborate === "true";

          if (filter === "all") {
            card.style.display = "flex";
          } else if (filter === "colaborativo") {
            card.style.display = isCollaborative ? "flex" : "none";
          } else {
            const hasTag = tags.split(',').includes(filter);
            card.style.display = hasTag ? "flex" : "none";
          }
        });
      });
    });
  });
</script>

<style>
  .projects-section {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #13151a;
    margin: 0 auto;
  }

  .projects-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    row-gap: 40px;
  }

  h2{
    font-size: 2.5rem;
    display: inline-block;
    position: relative;
    color: #fff;
    padding: 10px;
  }

  h2::before {
    content: '';
    position: absolute;
    bottom: 0.80px; 
    left: 0;
    width: 20%; 
    border-bottom: 4px solid #fb4ea1; 
    white-space: nowrap; 
  }

  .filters {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .filter-btn {
    padding: 8px 18px;
    border: 1px solid #fb4ea1;
    color: #fff;
    background: transparent;
    border-radius: 20px;
    cursor: pointer;
    transition: 0.3s;
  }

  .filter-btn.active,
  .filter-btn:hover {
    background: #fb4ea1;
  }

  .cards-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 30px 20px;
    justify-items: center;
  }

  body.open .projects-section {
        display: none;
  }

  @media (min-width: 600px) {
  .cards-container {
    grid-template-columns: 1fr 1fr;
  }
}

   @media (min-width:900px) {
    .cards-container {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 1220px) {
    .cards-container {
      grid-template-columns: repeat(4, 1fr);
      gap: 30px 20px;
    }
  }

</style>