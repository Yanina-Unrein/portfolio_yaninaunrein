---
import SocialButtons from "@/components/buttons/SocialButtons.astro";
import { getLangFromUrl, useTranslations } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="hero" class="hero">
  <div class="background">
    <div class="container-title">
        <span class="name" data-i18n="hero.text">{t('hero.text')} 
            <span class="hand-icon">ðŸ‘‹</span>
        </span>
        <h1>FullStack</h1>
        <h2>Developer</h2>
        <span class="slogan-hero" data-i18n="hero.slogan">{t('hero.slogan')}</span>
        <SocialButtons class="social-buttons" />
    </div>
    </div>
</section>

<script type="module">
    import { gsap } from 'https://cdn.skypack.dev/gsap';
  
    function initAnimation() {
      gsap.set(['.name', 'h1', 'h2', 'span'], { y: 100, opacity: 0, visibility: 'hidden' });
  
      gsap.to(['.name', 'h1', 'h2', 'span'], {
        opacity: 1,
        y: 0,
        visibility: 'visible',
        ease: 'power3.out',
        duration: 1.5,
        stagger: 0.3,
        delay: 0.2,
      });
    }
  
    document.addEventListener('DOMContentLoaded', initAnimation);
</script>

<style>
    .hero {
        position: relative;
        width: 100%;
        height: 900px; 
    }

    .background {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        overflow: hidden;
        position: relative;
        background-attachment: fixed;
        width: 100%; 
        height: 900px; 
        background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url("/img/hero-opacity.webp");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        right: 0px;
        left: 0px;
        top: 0;
    }

    .container-title {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        position: relative;
        z-index: 1;
        padding: 10px;
    }

    h1 {
        font-size: 4rem;
        font-weight: 800;
        background-color: #FF3CAC;
        background-image: linear-gradient(225deg, #FF3CAC 0%, #9035df 50%, #1b8ee0 100%);
        background-size: 200% auto;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: aurora 8s ease-in-out infinite alternate;
    }

    h2 {
        font-size: 2.5rem; 
        font-weight: 800;
        color: #ffffff; 
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
   }

   .name{
        color: #fff;
        font-weight: 600;
        font-size: 1.3rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .slogan-hero{
        color: #fff;
        font-weight: 600;
        font-size: 1.3rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        padding-top: 25px;
        max-width: 546px;
    }
   
    body.open h1, body.open h2, body.open .name,body.open .slogan-hero, body.open .social-buttons  {
        display: none;
    }


   .hand-icon {
        animation: wave  2.5s infinite;
        transform-origin: 70% 70%;
        display: inline-block;
    }

   @media(min-width:768px){
    h1{
        font-size: 5rem;
        letter-spacing: -6px;
    }
    h2{
        font-size: 3rem;
    }
    }

   @media(min-width:1024px){
    h1{
        font-size: 8rem;
        letter-spacing: -6px;
    }
    h2{
        font-size: 3.5rem;
    }
  }
  @keyframes wave {
        0% {
            transform: rotate(0deg);
        }
        10% {
            transform: rotate(14deg);
        }
        20% {
            transform: rotate(-8deg);
        }
        30% {
            transform: rotate(14deg);
        }
        40% {
            transform: rotate(-4deg);
        }
        50% {
            transform: rotate(10deg);
        }
        60% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(0deg);
        }
    }
    @keyframes aurora {
        0% {
            background-position: 0% 50%;
        }
        25% {
            background-position: 50% 100%;
        }
        50% {
            background-position: 100% 50%;
        }
        75% {
            background-position: 50% 0%;
        }
        100% {
            background-position: 0% 50%;
        }
    }
</style>