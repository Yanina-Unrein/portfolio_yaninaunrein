---
import GithubCard from "../icons/GithubCard.astro";

const {
  classList = [],
  'data-tags': dataTags = '',
  'data-collaborate': dataCollaborate = false,
  slug,
  image,
  title,
  description,
  tecnologias,
  github,
  url,
  collaborate,
  viewMore,
  fecha,
  state,
  image2,
} = Astro.props;
---

<div 
  class={['card-project', ...classList].join(' ')} 
  data-tags={dataTags} 
  data-collaborate={dataCollaborate}
>
  <div class="card-header">
    <img 
      src={image} 
      alt={`Captura del proyecto ${title}`}
      class="card-image"
      loading="lazy"
    />
    <div class="card-badges">
      {collaborate && <span class="badge collaborative" data-i18n="projects.collaborative">Colaborativo</span>}
      <span class={`badge state ${state}`}>
        {state === 'en-progreso' ? 'En Progreso' : 
         state === 'completado' ? 'Completado' : state}
      </span>
    </div>
  </div>

  <!-- Contenido de la card -->
  <div class="card-content">
    <div class="card-meta">
      <span class="card-date">{fecha}</span>
      {image2 && <img src={image2} alt={`Logo ${title}`} class="card-logo" />}
    </div>
    
    <h3 class="card-title">{title}</h3>
    <p class="card-description">{description}</p>

    <!-- Tecnologías -->
    <div class="technologies">
      {tecnologias.map((tech: any) => (
        <span class="tech-tag">{tech}</span>
      ))}
    </div>

    <!-- Acciones -->
    <div class="card-actions">
      <a 
        href={github} 
        class="btn btn-secondary"
        target="_blank"
        rel="noopener noreferrer"
        aria-label={`Código fuente de ${title} en GitHub`}
      >
        <GithubCard class="btn-icon" />
        GitHub
      </a>
      
      {url && url !== '#' && (
        <a 
          href={url} 
          class="btn btn-primary"
          target="_blank"
          rel="noopener noreferrer"
          aria-label={`Ver proyecto ${title} en vivo`}
        >
          <svg class="btn-icon" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
          </svg>
          Ver Proyecto
        </a>
      )}
    </div>
  </div>
</div>

<style>
  .card-project {
    background: #1e1e1e;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
    border: 1px solid #2a2a2a;
    display: flex;
    flex-direction: column;
    max-width: 100%;
    height: 100%;
  }

  .card-project:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 30px rgba(251, 78, 161, 0.2);
    border-color: #fb4ea1;
  }

  .card-header {
    position: relative;
    overflow: hidden;
  }

  .card-image {
    width: 100%;
    height: 230px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  /* Badges */
  .card-badges {
    position: absolute;
    top: 12px;
    right: 12px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .badge {
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .badge.collaborative {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .badge.state {
    background: rgba(0, 0, 0, 0.8);
    color: white;
    backdrop-filter: blur(10px);
  }

  .badge.state.en-progreso {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  }

  .badge.state.completado {
    background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  }

  /* Contenido */
  .card-content {
    padding: 10px 20px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .card-date {
    color: #888;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .card-logo {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: white;
    margin: 0;
    line-height: 1.3;
  }

  .card-description {
    color: #ccc;
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 8px 0;
    flex-grow: 1;
  }

  /* Tecnologías */
  .technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-bottom: 20px;
  }

  .tech-tag {
    background: rgba(251, 78, 161, 0.1);
    color: #fb4ea1;
    padding: 4px 10px;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 500;
    border: 1px solid rgba(251, 78, 161, 0.3);
    transition: all 0.2s ease;
  }

  .tech-tag:hover {
    background: rgba(251, 78, 161, 0.2);
    transform: scale(1.05);
  }

  /* Acciones */
  .card-actions {
    display: flex;
    gap: 12px;
    margin-top: auto;
  }

  .btn {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 16px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.875rem;
    text-decoration: none;
    transition: all 0.2s ease;
    flex: 1;
    justify-content: center;
  }

  .btn-primary {
    background: linear-gradient(135deg, #fb4ea1 0%, #e03e8f 100%);
    color: white;
    border: none;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(251, 78, 161, 0.4);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
  }

  .btn-icon {
    width: 16px;
    height: 16px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .card-actions {
      flex-direction: column;
    }
    
    .card-image {
      height: 180px;
    }
    
    .card-content {
      padding: 16px;
    }
  }

  @media (max-width: 480px) {
    .card-badges {
      flex-direction: row;
      top: 8px;
      right: 8px;
    }
    
    .badge {
      font-size: 0.7rem;
      padding: 3px 8px;
    }
  }
</style>