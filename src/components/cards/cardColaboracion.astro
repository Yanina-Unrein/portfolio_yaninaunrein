---
import { getLangFromUrl, useTranslations } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url); // Obtener el idioma de la URL
const t = useTranslations(lang); // Obtener la función de traducción

const { image, title, description, link, view_more, classList = [] } = Astro.props;
---

<article class="card-colaboration">
    <div class="card">
        <figure>
            <img src={image} alt={`${title} cover`} />
        </figure>
        <div class="description-container">
            <h4>{title}</h4>
            <p>{description}</p>
        </div>
        <div class="link-container">
           <a href={link} target="_blank">{view_more}</a>
        </div>  
    </div>  
</article>

<style>
    article{      
        width: 300px;
        margin: 10px;
    }

    .card{
        display: flex;
        justify-content: space-between;
        flex-direction: column;
        align-items: center;
        width: 300px;
        height: 100%;
        padding: 10px;
    }

    figure{
        width: 100%;  
        height: 300px;      
    }
    figure img{
        width: 100%;
        height: 100%;
        border-radius: 20px;    
    }
    
    .description-container{
       text-align: center;
        color: #fff;
        padding: 5px;
        flex: 1;
        min-height: 150px;
    }

    h4{
        font-size: 1.2rem;
        text-transform: uppercase;
        background-image: linear-gradient(225deg, #FF3CAC 0%, #784BA0 50%, #2B86C5 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        transition: all .2s;
        text-align: center;
    }

    p{
        font-size: 0.90rem;
    }

    .link-container {
        margin-top: auto;
    }

    a{
        display: inline-block;
        padding: 10px 15px;
        border: 1px solid #784BA0;
        border-radius: 4px;
        transition: all 0.2s ease-in;
        position: relative;
        overflow: hidden;
        cursor: pointer;
        color: #784BA0;
        z-index: 1;
    }
    a:before {
        content: "";
        position: absolute;
        left: 50%;
        transform: translateX(-50%) scaleY(1) scaleX(1.25);
        top: 100%;
        width: 140%;
        height: 180%;
        background-color: rgba(0, 0, 0, 0.05);
        border-radius: 50%;
        display: block;
        transition: all 0.5s 0.1s cubic-bezier(0.55, 0, 0.1, 1);
        z-index: -1;
    }


    a:after {
        content: "";
        position: absolute;
        left: 55%;
        transform: translateX(-50%) scaleY(1) scaleX(1.45);
        top: 180%;
        width: 160%;
        height: 190%;
        background-color: #784BA0;
        border-radius: 50%;
        display: block;
        transition: all 0.5s 0.1s cubic-bezier(0.55, 0, 0.1, 1);
        z-index: -1;
    }

    a:hover {
        color: #ffffff;
        border: 1px solid #784BA0;
    }

    a:hover:before {
        top: -35%;
        background-color: #784BA0;
        transform: translateX(-50%) scaleY(1.3) scaleX(0.8);
    }

    a:hover:after {
        top: -45%;
        background-color: #784BA0;
        transform: translateX(-50%) scaleY(1.3) scaleX(0.8);
    }

    body.open article, body.open h4, body.open p, .body.open a  {
        display: none;
    }
</style>